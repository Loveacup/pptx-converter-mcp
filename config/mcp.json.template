{
  "mcpServers": {
    "pptx-converter": {
      "command": "/opt/homebrew/bin/python3.11",
      "args": ["HOME_DIR/.local/bin/pptx-converter-mcp"],
      "env": {
        "LLM_API_URL": "YOUR_LLM_API_URL",
        "LLM_API_KEY": "YOUR_LLM_API_KEY",
        "LLM_MODEL": "YOUR_MODEL_NAME",
        "MAX_WORKERS": "3",
        "CACHE_DIR": "/tmp/ppt_image_cache"
      }
    }
  }
}
